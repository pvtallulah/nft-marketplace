{
  "name": "marketplace-backend",
  "version": "0.0.1",
  "description": "Decentraland NTF Marketplace!",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copy-files-from-to",
    "build": "tsc && npm run copy-files",
    "start": "node dist/src/server.js",
    "start:debug": "node --inspect=0.0.0.0 dist/src/server.js",
    "start:docker": "docker compose --env-file .env -f docker-compose.yml up --build -d ",
    "start:docker:gh": "docker compose -f docker-compose-gh.yml up --build -d ",
    "dev2": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
    "predev": "npm run swagger",
    "prebuild": "npm run clean && npm run swagger",
    "migrations": "typeorm-ts-node-esm migration:run -d ./src/db/data-source.ts",
    "migrations:new": "npx typeorm-ts-node-esm migration:generate ./src/db/migrations/transaction-log-analitycs -d ./src/db/data-source.ts",
    "dev3": "nodemon",
    "dev4": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "dev": "concurrently \"nodemon\"",
    "swagger": "tsoa spec-and-routes"
  },
  "copyFiles": [
    {
      "from": "public/**/*",
      "to": "dist/public"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decentralgames/marketplace-backend.git"
  },
  "author": "maikinahara[at]gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/decentralgames/marketplace-backend/issues"
  },
  "homepage": "https://github.com/decentralgames/marketplace-backend#readme",
  "dependencies": {
    "@alch/alchemy-web3": "^1.4.2",
    "@uniswap/sdk-core": "^3.2.2",
    "@uniswap/v3-periphery": "^1.4.3",
    "@uniswap/v3-sdk": "^3.9.0",
    "alchemy-sdk": "^2.0.4",
    "api": "^4.5.2",
    "aws-sdk": "^2.1578.0",
    "axios": "^0.26.1",
    "body-parser": "^1.20.0",
    "coinbase-commerce-node": "^1.0.4",
    "copy-files-from-to": "^3.9.1",
    "cors": "^2.8.5",
    "date-fns": "^2.29.1",
    "discord.js": "^14.14.1",
    "dotenv": "^16.0.0",
    "ethers": "^5.6.4",
    "express": "^4.17.3",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "mongoose": "^7.3.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "mysql2": "^2.3.3",
    "node-fs-extra": "^0.8.2",
    "pg": "^8.4.0",
    "pngjs": "^6.0.0",
    "probe-image-size": "^7.2.3",
    "rate-limiter-flexible": "^2.3.7",
    "reflect-metadata": "^0.1.13",
    "socks-proxy-agent": "^8.0.2",
    "stripe": "^10.0.0",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.4.0",
    "ts-exif-parser": "^0.2.2",
    "tsoa": "^4.1.0",
    "typeorm": "^0.3.10",
    "url-parse": "^1.5.10",
    "uuid": "^9.0.0",
    "web3": "^1.7.3",
    "web3-providers-ws": "^1.7.3",
    "ws": "^8.8.0"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/coinbase-commerce-node": "^1.0.6",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.189",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.11.16",
    "@types/node-fetch": "^2.6.4",
    "@types/pngjs": "^6.0.1",
    "@types/probe-image-size": "^7.2.0",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/url-parse": "^1.4.8",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.10",
    "concurrently": "^7.1.0",
    "eslint": "^8.23.1",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.1",
    "typescript": "^5.3.3"
  }
}
