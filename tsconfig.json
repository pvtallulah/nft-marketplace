{
  "compilerOptions": {
    "strict": false,
    "sourceMap": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "removeComments": true,
    "incremental": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "assets": ["./src/abi", "./src/repos"]
}
